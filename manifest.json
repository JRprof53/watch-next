{
	"manifest_version": 2,

	"name": "Watch Next: YouTube",
	"short_name": "Watch Next",
	"description": "This extensions lets you tell YouTube which video you want to watch next.",
	"version": "1.1",

	"permissions": [
		"https://youtube.com/",
		"tabs",
		"contextMenus"
	],

	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},

	"browser_action": {
		"default_icon": "icon32.png",
		"default_popup": "popup.html"
	},

	"icons": { 
		"16": "icon16.png",
		"128": "icon128.png" 
	},

	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/*", "http://www.youtube.com/*"],
			"js": ["jquery.js", "playnextbutton.js"]
		},
		{
			"matches": ["https://www.youtube.com/watch?v=*", "http://www.youtube.com/watch?v=*"],
			"js": ["jquery.js", "playnext.js"]
		}
	],

	"web_accessible_resources": ["icon16.png"]
}